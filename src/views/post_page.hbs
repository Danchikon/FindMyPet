            slidesToScroll: 1,
            arrows: false,
            dragble: false,
            responsive: [
                {
                    breakpoint: 600,
                    settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                    slidesToShow: 5,
